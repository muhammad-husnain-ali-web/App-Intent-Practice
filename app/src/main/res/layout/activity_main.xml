<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_activity_to_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Activity" />

    <Button
        android:id="@+id/btn_activity_to_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Service" />

    <Button
        android:id="@+id/btn_activity_to_system_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to System App" />

    <Button
        android:id="@+id/btn_activity_to_other_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Other App" />

    <Button
        android:id="@+id/btn_activity_to_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity to Broadcast" />

</LinearLayout>